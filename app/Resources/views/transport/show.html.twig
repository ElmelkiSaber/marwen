{% extends 'base.html.twig' %}

{% block body %}
    <h1>Transport</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transport.id }}</td>
            </tr>
            <tr>
                <th>Nomcompagne</th>
                <td>{{ transport.nomCompagne }}</td>
            </tr>
            <tr>
                <th>Datedepart</th>
                <td>{% if transport.dateDepart %}{{ transport.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prixtransport</th>
                <td>{{ transport.prixTransport }}</td>
            </tr>
            <tr>
                <th>Villearrive</th>
                <td>{{ transport.villeArrive }}</td>
            </tr>
            <tr>
                <th>Villedepart</th>
                <td>{{ transport.villeDepart }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('transport_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('transport_edit', { 'id': transport.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
