{% extends 'base.html.twig' %}

{% block body %}
    <h1>Transports list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomcompagne</th>
                <th>Datedepart</th>
                <th>Prixtransport</th>
                <th>Villearrive</th>
                <th>Villedepart</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>
                <td><a href="{{ path('transport_show', { 'id': transport.id }) }}">{{ transport.id }}</a></td>
                <td>{{ transport.nomCompagne }}</td>
                <td>{% if transport.dateDepart %}{{ transport.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ transport.prixTransport }}</td>
                <td>{{ transport.villeArrive }}</td>
                <td>{{ transport.villeDepart }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('transport_show', { 'id': transport.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('transport_edit', { 'id': transport.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('transport_new') }}">Create a new transport</a>
        </li>
    </ul>
{% endblock %}
